<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PopupDialogStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DialogDisplayStyle">
        <item name="android:windowEnterAnimation">@anim/in_anim</item>
        <item name="android:windowExitAnimation">@anim/out_anim</item>
    </style>
</resources>
